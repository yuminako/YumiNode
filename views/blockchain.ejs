<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Explorer la Blockchain</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f9;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            align-items: center;
        }
        h1 {
            margin: 20px 0;
        }
        .blockchain-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
            gap: 20px;
            padding: 20px;
            width: 100%;
            max-width: 1200px;
        }
        .block {
            background: #ffffff;
            border: 2px solid #ccc;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            text-align: center;
            padding: 10px;
            cursor: pointer;
            position: relative;
            transition: transform 0.2s ease, box-shadow 0.2s ease;
        }
        .block:hover {
            transform: translateY(-5px);
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        }
        .block h3 {
            margin: 0;
            font-size: 16px;
        }
        .modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.8);
            z-index: 1000;
            justify-content: center;
            align-items: center;
        }
        .modal-content {
            background: #fff;
            padding: 20px;
            border-radius: 5px;
            width: 90%;
            max-width: 600px;
            text-align: left;
        }
        .modal-content h3 {
            margin-top: 0;
        }
        .modal-close {
            position: absolute;
            top: 10px;
            right: 10px;
            background: #ff5f5f;
            color: #fff;
            border: none;
            border-radius: 50%;
            width: 25px;
            height: 25px;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <h1>Explorer la Blockchain</h1>
    <a href="/dashboard">Retour au Dashboard</a>
    <div class="blockchain-container">
        <% chain.forEach((block, index) => { %>
            <div class="block" data-index="<%= index %>">
                <h3>Bloc <%= index %></h3>
                <p><strong>Hash:</strong> <%= block.hash.substring(0, 10) %>...</p>
            </div>
        <% }); %>
    </div>
    <% chain.forEach((block, index) => { %>
        <div class="modal" id="modal-<%= index %>">
            <div class="modal-content">
                <button class="modal-close" data-index="<%= index %>">&times;</button>
                <h3>Détails du Bloc <%= index %></h3>
                <p><strong>Hash:</strong> <%= block.hash %></p>
                <p><strong>Hash Précédent:</strong> <%= block.previousHash %></p>
                <p><strong>Timestamp:</strong> <%= new Date(block.timestamp).toLocaleString() %></p>
                <p><strong>Messages:</strong></p>
                <ul>
                    <% block.messages.forEach(message => { %>
                        <li>
                            <p><strong>De:</strong> <%= message.from %></p>
                            <p><strong>À:</strong> <%= message.to %></p>
                            <p><strong>Contenu (Chiffré):</strong> <%= message.encryptedMessage %></p>

                            <% if (message.plaintext) { %>
                            <p><strong>Contenu (Déchiffré):</strong> <%= message.plaintext %></p>
                            <% } %>
                            <p><strong>Signature:</strong> <%= message.signature %></p>
                        </li>
                    <% }); %>
                </ul>
            </div>
        </div>
    <% }); %>
    <script>
        document.querySelectorAll('.block').forEach(block => {
            block.addEventListener('click', () => {
                const index = block.getAttribute('data-index');
                document.getElementById(`modal-${index}`).style.display = 'flex';
            });
        });

        document.querySelectorAll('.modal-close').forEach(button => {
            button.addEventListener('click', () => {
                const index = button.getAttribute('data-index');
                document.getElementById(`modal-${index}`).style.display = 'none';
            });
        });

        window.addEventListener('click', (event) => {
            if (event.target.classList.contains('modal')) {
                event.target.style.display = 'none';
            }
        });
    </script>
</body>
</html>
